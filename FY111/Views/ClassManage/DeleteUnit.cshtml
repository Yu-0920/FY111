@model FY111.Models.FY111.ClassUnit

@{
    ViewData["Title"] = @Localizer["Delete"];
}

<h1>@ViewData["Title"]</h1>

<h3>@Localizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@Localizer["ClassUnit"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.Image, "ToImage", new { @belong = "ClassUnit" })
        </dd>
        <dd class="col-sm-8">
        </dd>

    </dl>

    <form asp-action="DeleteUnit">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@(Localizer["Delete"])" class="btn btn-danger" />
        <a asp-action="Details" asp-route-id="@(Model.ClassId)" class="btn btn-primary">@Localizer["Back to List"]</a>
    </form>
</div>