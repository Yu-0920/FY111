@model IEnumerable<FY111.Models.FY111.LoginApp>

@{
    ViewData["Title"] = @Localizer["UploadManage"];
}

<h1>@ViewData["Title"]</h1>
<hr />

<form method="post" enctype="multipart/form-data">
    <input type="file" name="files" multiple required />
    <input type="text" autocomplete="off" placeholder="檔案註解" name="Content" />
    <button class="btn btn-success" type="submit" asp-controller="UploadManage" asp-action="UploadFile">@Localizer["UploadManage"]</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Application)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => item.Id)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Application, "ToFile", new { belong = "Application" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    <a type="button" class="btn btn-danger" asp-controller="UploadManage" asp-action="DeleteFile" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>